
@{
    ViewData["Title"] = "Work";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Item Details</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
        }

        .item-card {
            border: 1px solid #ccc;
            border-radius: 5px;
            overflow: hidden;
            margin-bottom: 20px;
        }

        .item-image {
            width: 100%;
            height: auto;
            display: block;
        }

        .item-details {
            padding: 10px;
        }

        .item-price {
            font-size: 18px;
            font-weight: bold;
            color: #007bff;
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="item-card">
            <img src="/images/item1.jpg" height="100" width="100">
            <div class="item-details">
                <h2>Artisinal Pottery Vase</h2>
                <p>a stunning fusion of artistry and functionality that brings timeless beauty to any space.</p>
                <span class="item-price">$50</span>
            </div>
        </div>
    </div>
</body>
