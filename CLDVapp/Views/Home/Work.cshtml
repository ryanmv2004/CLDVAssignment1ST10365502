@model List<CLDVapp.Models.productTable>

@{
    ViewData["Title"] = "Work";
}

@if (Model != null && Model.Count > 0)
{
    foreach (var product in Model)
    {
        <head>
            <meta charset="UTF-8">
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
            <title>Item Details</title>
            <style>
                body {
                    font-family: Arial, sans-serif;
                    margin: 0;
                    padding: 0;
                }

                .container {
                    max-width: 600px;
                    margin: 0 auto;
                    padding: 20px;
                }

                .item-card {
                    border: 1px solid #ccc;
                    border-radius: 5px;
                    overflow: hidden;
                    margin-bottom: 20px;
                }

                .item-image {
                    width: 100%;
                    height: auto;
                    display: block;
                }

                .item-details {
                    padding: 10px;
                }

                .item-price {
                    font-size: 18px;
                    font-weight: bold;
                    color: #007bff;
                    margin-top: 10px;
                }

                .purchase-button {
                    display: inline-block;
                    padding: 10px 15px;
                    font-size: 16px;
                    font-weight: bold;
                    color: #fff;
                    background-color: #28a745;
                    border: none;
                    border-radius: 5px;
                    text-align: center;
                    text-decoration: none;
                    cursor: pointer;
                    margin-top: 15px;
                }

                    .purchase-button:hover {
                        background-color: #218838;
                    }
            </style>
        </head>
        <body>
            <div class="container">
                <div class="item-card">
                    <img src="@product.url" alt="@product.name style="width:50px;height:50px;">
                    <div class="item-details">
                        <form asp-action="AddTransaction" asp-controller="Transaction" method="post">
                            <input type="hidden" name="userID" value="@ViewData["UserID"]" />
                            <input type="hidden" name="productID" value="@product.productID" />
                            <input type="hidden" name="name" value="@product.name" />
                            <input type="hidden" name="description" value="@product.description" />
                            <input type="hidden" name="price" value="@product.price" />
                            <h2>@product.name</h2>
                            <p>@product.description</p>
                            <span class="item-price">@product.price</span>
                            <button type="submit" class="purchase-button">Order Now</button>
                        </form>

                    </div>
                </div>
            </div>
        </body>
    }
}
else
{
    <div>No products found.</div>
}